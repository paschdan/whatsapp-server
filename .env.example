# Server Configuration
PORT=3000

# API Authentication
# Generate a secure random key, e.g.: openssl rand -hex 32
API_KEY=your-secure-api-key-here

# Allowed Phone Numbers (comma-separated, with country code)
# Only these numbers can receive messages
ALLOWED_PHONES=+491234567890,+491111111111

# WhatsApp Session Storage Directory
AUTH_DIR=./auth_info

# Logging Level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info
